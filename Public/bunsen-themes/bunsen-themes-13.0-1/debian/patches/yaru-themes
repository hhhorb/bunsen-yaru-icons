+      function        = CHECK
+      state           = NORMAL
+      shadow          = ETCHED_IN
+      overlay_file    = "assets/menu-checkbox-mixed.png"
+      overlay_stretch = FALSE
+    }
+
+    image {
+      function        = CHECK
+      state           = PRELIGHT
+      shadow          = ETCHED_IN
+      overlay_file    = "assets/menu-checkbox-mixed.png"
