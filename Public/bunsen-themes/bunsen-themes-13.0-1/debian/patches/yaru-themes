+      overlay_file    = "assets/scrollbar-arrow-right.png"
+      detail          = "hscrollbar"
+      overlay_border  = { 0, 0, 0, 0 }
+      overlay_stretch = FALSE
+      arrow_direction = RIGHT
+    }
+
+    image {
