+style "inline_toolbar" {
+
+  GtkToolbar::button-relief = GTK_RELIEF_NORMAL
+
+  engine "pixmap" {
+    image {
+      function = SHADOW
+      file     = "assets/frame-inline.png"
+      border   = {1, 1, 0, 1}
+      stretch  = TRUE
+    }
+  }
